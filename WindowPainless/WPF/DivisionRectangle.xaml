<UserControl x:Class="WindowPainless.WPF.DivisionRectangle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowPainless.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Rectangle x:Name="divisionRectangle" Fill="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" Margin="4" Stroke="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" MouseLeftButtonDown="Rectangle_MouseLeftButtonDown"/>
    </Grid>
</UserControl>